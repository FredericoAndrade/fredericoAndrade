.gallery
  .wrapper
    float left
    width 100%
  .singleHead
    display inline-block
    width 100%
    float left

  .fold
    margin 0
    width 100%
    height 100vh
    background-color #B6E2E9
    overflow hidden
    position absolute
    background-size cover
    background-position center

    img
      margin auto
      display block
      height 100%

  nav
    width 100%
    height 7vh
    min-height 56px
    float left
    padding .6rem 1rem 0
    position absolute

  .content
    margin auto
    color $red
    margin-top 5rem
    position relative

    h1, h2, h3
      font-family $serif
      color $red
      display block
      float none
      margin-bottom 1rem
      clear both

    h1,h2
      margin-left 2rem

    h1
      font-size 10rem

    h2
      font-size 3rem

    h3
      width initial
      margin-top 2rem

    .block
      padding 1rem 6rem
      width 100%
      max-width 1140px
      float none
      margin 0 auto 1rem
      display table
      border-left 3px solid
      gradient()

      h1
        width 100%

      &.three-col
        .break
          clear left
        .one-col
          width (100/3)%

          h1
            line-height .9
            margin-left 0
            white-space nowrap

        .two-col
          width (2*(100/3))%

          .one-col
            width 50%

        .three-col
          padding 0
          width 100%

      section,
      figure
        margin 0 auto
        padding 1rem 1rem 1rem
        display block
        float none
        width 100%

        .b
          background $grey
          border 5px solid $grey

        img, iframe
          width 100%

      span
        width 100%
        display block
        text-align center

        h3
          display block

          &::before,
          &::after
            width 20%
            height 1px
            background-color $red
            content ""
            margin-top 20px

          &::before
            float left

          &::after
            float right

      p,
      figcaption,
      a
        font-size 1.1rem
        line-height 1.4
        color $copy

      figcaption
        font-size .9rem
        font-style italic

      p
        text-indent 1.5rem
        margin-bottom .3rem

        em,
        a
          position relative
          font-style initial
          text-decoration none

          &::after
            content ""
            width 100%
            background-color #ffada8
            position absolute
            mix-blend-mode darken
            left 2px
            top 11px
            height 6px
            transition background-color 150ms ease-in-out

          &:hover
            &::after
              background-color #f79999

      figcaption
        text-align center

    ul
      list-style-type none