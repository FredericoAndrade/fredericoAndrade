$darkRed = #21000b

.gallery
  .singleHead
    display inline-block
    width 100%
    height 100vh

  nav
    width 100%
    height 7vh
    float left
    padding .6rem 1rem 0

    h2
      font-size 2rem
      font-family $serif
      color $red
      float left
      margin-left 5rem
      border-top 2px solid $red
      line-height 1.4

  .tags
    float none
    margin auto
    display block
    list-style-type none

    li
      padding .3rem .4rem
      margin 2px
      background-color $red
      color #FFE3D8
      float left
      clear none
      cursor pointer
      position relative

      &::selection
        background-color transparent

      &::after
        width 0
        content ""
        mix-blend-mode darken
        background-color $pink
        height 19px
        position absolute
        left -2px
        top 12px
        transition width 30ms ease-out

      &:active
        &::after
          width 100%

  .content
    margin auto
    color $red
    margin-top 5rem

    h1, h2, h3
      font-family $serif
      color $red
      display block
      float none
      margin-bottom 1rem
      clear both

    h1,h2
      margin-left 2rem

    h1
      font-size 6rem

    h2
      font-size 3rem

    h3
      width initial

    .block
      padding 1rem 6rem
      width 100%
      max-width 1140px
      float none
      margin 0 auto 1rem
      display table
      border-left 3px solid

      h1
        width 100%

      &.three-col
        .one-col
          // clear left
          width (100/3)%
          float left

        .two-col
          width (2*(100/3))%
          float right

      section,
      figure
        margin 0
        padding 0 1rem 2rem
        display inline-block

        img
          width 100%

      p,
      figcaption,
      a
        font-size 0.8rem
        line-height 1.4
        color darken(#00307c,10%)

      p
        text-align justify
        text-indent 1rem

        em,
        a
          position relative
          font-style initial
          text-decoration none

          &::after
            content ""
            width 100%
            background-color #FF5F9C
            position absolute
            mix-blend-mode darken
            left 2px
            top 8px
            height 6px

      figcaption
        text-align center

$distance = 5px
    h3
      &::before
        margin-left -(16+$distance)px
        margin-right $distance
        content "\A7"
        float left

    ul
      list-style-type none