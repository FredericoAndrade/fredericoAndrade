$darkRed = #21000b

.gallery
  .singleHead
    display inline-block
    width 100%
    height 100vh

  nav
    width 100%
    height 7vh
    float left
    padding .6rem 1rem 0

    h2
      font-size 2rem
      font-family $serif
      color $red
      float left
      margin-left 5rem
      border-top 2px solid $red
      line-height 1.4

  .tags
    float none
    margin auto
    display block
    list-style-type none

    li
      padding .3rem .4rem
      margin 2px
      background-color $red
      color #FFE3D8
      float left
      clear none
      cursor pointer
      position relative

      &::selection
        background-color transparent

      &::after
        width 0
        content ""
        mix-blend-mode darken
        background-color $pink
        height 19px
        position absolute
        left -2px
        top 12px
        transition width 30ms ease-out

      &:active
        &::after
          width 100%

  .content
    margin auto
    color $red
    margin-top 5rem

    h1, h2, h3
      font-family $serif
      color $red
      display block
      float none
      margin-bottom 1rem
      clear both

    h1,h2
      margin-left 2rem

    h1
      font-size 6rem

    h2
      font-size 3rem

    h3
      width initial
      margin-top 2rem

    .block
      padding 1rem 6rem
      width 100%
      max-width 1140px
      float none
      margin 0 auto 1rem
      display table
      border-left 3px solid

      h1
        width 100%

      &.three-col
        .one-col
          width (100/3)%

          h1
            line-height .9
            margin-left 0
            white-space nowrap

        .two-col
          width (2*(100/3))%

          .one-col
            width 50%

        .three-col
          padding 0
          width 100%

      section,
      figure
        margin 0
        padding 1rem 1rem 1rem
        display inline-block
        float left
        width 100%

        img, iframe
          width 100%

        // img
        //   padding 2px
        //   background-color #000

      p,
      figcaption,
      a
        font-size 1.1rem
        line-height 1.4
        color darken(#00307c,10%)

      figcaption
        font-size .9rem
        font-style italic

      p
        text-indent 1.5rem

        em,
        a
          position relative
          font-style initial
          text-decoration none

          &::after
            content ""
            width 100%
            background-color #ffada8
            position absolute
            mix-blend-mode darken
            left 2px
            top 11px
            height 6px
            transition background-color 150ms ease-in-out

          &:hover
            &::after
              background-color #f79999

      figcaption
        text-align center

    ul
      list-style-type none