@import 'vars'

body
  margin 0
  padding 0
  font-family sans-serif

h1,
h2
  font-family $sans
  color $yellow

h1,
h2,
h3,
ul,
p
  margin 0

h1
  font-size 3rem
h2
  font-size 1.5rem
h3
  font-size 1.9rem
  width 100%

p, ul, li
  clear both
  font-size 1rem

ul
  padding 0

h3
  color $red
  a
    text-decoration none
    color $red
    position relative

    &::after
      width 0
      content ""
      mix-blend-mode darken
      background-color lighten($yellow, 50%)
      background-color $pink
      height 12px
      position absolute
      left 0
      top 8px
      transition width 150ms ease-out

    &:hover
      &::after
        width 100%

body
  float left
  display inline-block
  background-color $base
  gradient()
  width 100%

  *
    box-sizing border-box
    &::selection
      background-color lighten(#FF2F63,60%)

  .toggle
    position absolute
    top 0
    right 0

.App
  position relative
  min-height 100vh
  margin auto
  float none
  display table
  padding 3.5rem 4.75rem 2.25rem 2.5rem

  *
    line-height 1.75rem
    display inline-block
    float left

  i
    float initial

  h1
    line-height initial
    float left

@import "LinkTo"
@import "Mobile"
@import "Index"
@import "Single"
@import "Carousel"
@import "Resume"