@import 'vars'

html
  background-color $purple

body
  margin 0
  padding 0
  font-family sans-serif

h1,
h2
  font-family $sans
  color $red

h1,
h2,
h3,
ul,
p
  margin 0

h1
  font-size 3rem
h2
  font-size 1.5rem
h3
  font-size 1.9rem
  width 100%

p, ul, li
  clear both
  font-size 1rem

ul
  padding 0

h3
  color $red
  a
    text-decoration none
    color $red
    position relative

    &::after
      width 0
      content ""
      mix-blend-mode darken
      background-color lighten($red, 50%)
      background-color $pink
      height 12px
      position absolute
      left 0
      top 8px
      transition width 150ms ease-out

    &:hover
      &::after
        width 100%

body
  float left
  display inline-block
  background-color $base
  gradient()
  width 100%

  *
    box-sizing border-box
    &::selection
      background-color lighten(#FF2F63,60%)

  .toggle
    position absolute
    top 0
    right 0

.App
  position relative
  min-height 100vh
  margin auto
  float none
  display table
  margin-top -4rem
  padding 5.5rem 2.5rem 5.25rem 2.5rem
  border-right 5px solid $red

  &.resume
    &::after
      border-left none

  &::after
    content ""
    background-color transparent
    height 40px
    transform translateX(-50%)
    margin-left 45%
    position absolute
    bottom -40px
    border-left 100vw solid
    border-left-color $purple
    border-top 50px solid transparent

  *
    line-height 1.75rem
    display inline-block
    float left

  i
    float initial

  h1
    line-height initial
    float left

@import "LinkTo"
@import "Mobile"
@import "Index"
@import "Single"
@import "Carousel"
@import "Resume"