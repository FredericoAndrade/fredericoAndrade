.App
  &.resume
    max-width 1140px
    padding 0 4.75rem 0 2.5rem
    margin 3.5rem auto 2.25rem
    display table
    float none
    border-right 3px solid $red
    border-left 3px solid $red

    nav
      float right
      a
        position relative
        margin-top 4.2rem

        &::after
          width 0
          content ""
          mix-blend-mode darken
          background-color $pink
          height 12px
          position absolute
          left 0
          top 8px
          transition width 150ms ease-out

        &:hover
          &::after
            width 100%

    h1
      a
        color #C05968
        text-decoration none
        line-height 1
        position relative

        &::after,
        &::before
          width 0
          content ""
          mix-blend-mode darken
          background-color $pink
          height 40%
          position absolute
          left 0
          top 8px
          transition width 150ms ease-out

        &::before
          top 50%
          left -2%

        &:hover
          &::after
            width 100%

          &::before
            width 86%

  #content
    margin-top 6rem
    color $copy

    > div
      float left

    #main
      width ((100/6)*4)%
      padding-right 1rem

      section
        width 100%

        &:first-of-type
          article:first-of-type
            .date::after
              content ""
              position absolute
              height 3.25rem
              width 4px
              margin-left 14px
              margin-top -.25rem
              background-color $yellow

        h2
          width ((100/4)*1)%
          text-align right
          margin-left -1rem

        article
          width 100%
          margin-bottom 1.75rem

          .date
            width ((100/4)*1)%
            padding-right 1rem

            p
              text-align right
              width 100%

          .body
            float right
            width ((100/4)*3+-1)%
            padding-left 1rem

            h3
              margin-top -.25rem
              margin-bottom .25rem

              &::before
                content ""
                display none


            .description
              a
                float initial
                color $copy
                text-decoration none
                font-variant small-caps
                position relative

                &::after
                  width 100%
                  content ""
                  mix-blend-mode darken
                  background-color #ffada8
                  position absolute
                  left 2px
                  top 11px
                  height 6px
                  transition background-color 150ms ease-in-out

                &:hover
                  &::after
                    width 100%
                    background-color #f79999

            &.more
              text-align center


    #side
      width ((100/6)*2)%
      padding-left 1rem

      section
        margin-bottom 1.5rem

        ul, p
          padding-top .25rem

          &:first-of-type
            padding 0

        a
          float initial
          color $copy
          text-decoration none
          position relative

          &::after
            width 100%
            content ""
            mix-blend-mode darken
            background-color #ffada8
            position absolute
            left 2px
            top 11px
            height 6px
            transition background-color 150ms ease-in-out

          &:hover
            &::after
              width 100%
              background-color #f79999

        &:last-of-type
          margin-top 11.75rem

footer
  width 100%
  padding-top 4rem

  .main
    float left
    width ((100/3)*2)%

    a
      padding-left 1rem
      width 75%
      float right
      text-decoration none
      color $copy

  .side
    float right
    color $copy

@media only screen and (max-device-width : 667px)
  body
    .App
      &.resume
        max-width 100%
        margin-top 0
        padding 1.5rem 1.5rem 2.25rem 1.5rem

        footer
          .main
            a
              float left

@import "LinkTo"
@import "Mobile"
@import "GalleryIndex"
@import "GallerySingle"