@media (max-width:1400px)
  body
    .App
      &.resume
        button
          color $red

        a.linkTo.r
          display none

@media (max-width:1139px)
  body
    .App
      border-width 4px

@media (max-width:1138px)
  body
    .App
      border-width 3px

@media (max-width:1137px)
  body
    .App
      border-width 2px

@media (max-width:1136px)
  body
    .App
      border-width 1px

@media (max-width:1135px)
  body
    padding-bottom 10rem !important

    .App
      border-width 0

      &.resume
        button
          color $yellow
          text-shadow none

      #content
        #main
          width 100%

        #side
          float right
          width ((100/4)*3)%

          section
            width 100%

            h2
              transform translateX(-100%)
              padding-right 2rem

            &:last-of-type
              margin-top initial

@media (max-width:780px)
  body
    .App
      #content
        #main
          section
            h2
              text-align left
              margin-left 1rem
              margin-bottom 1rem
              width 100%

            article
              .body, .date
                width 100%

        #side
          width 100%

          section
            h2
              transform none

@media only screen and (max-device-width : 667px)
  body
    .App
      padding 1.5rem 1.5rem 2.25rem 1.5rem

      h1.statement
        font-size 21vw
        margin-top 0

      #galleryIndex
        max-width 100%
        display block

        li
          a
            font-size 3.8rem

      footer
        max-width 100%

    .gallery
      max-width 100%