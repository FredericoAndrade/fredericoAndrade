// .g = gallery page link
// .l = left
// .r = right

.linkTo
  font-weight bold
  font-size 3rem
  text-align center
  color $red
  position fixed
  z-index 2
  text-decoration none
  bottom 1rem
  line-height 1
  padding-top 1rem
  cursor pointer

  &.g
      position relative
      display inline-block
      bottom 0
      font-size 1rem
      padding-top 1.2rem

      &::after
        left 25px
        height 18px
        top 25px
        transition width 55ms ease-out

      &.r
        float right
        right 0
        &:hover
          &::after
            width 60%

      &.l
        float left
        left 0
        &:hover
          &::after
            width 80%