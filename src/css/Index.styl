$width = 830px
// $a = #fbeee9
h1.statement
  font-size 7rem
  font-size 24vh
  line-height 1
  max-width $width
  max-width 84vh
  margin 1vh 0
  float none
  display block
  // text-shadow 1px 2px #ffc3ab, -1px 2px $a, -1px -2px $a, 1px -2px $a

  span
    font-size 2rem
    font-size 4vh
    text-align center
    margin-top 8vh
    width 100%
    font-style italic

#galleryIndex
  width $width
  float none
  margin 0 0 15vh
  display table

  .breadcrumb
    margin 11vh 0 7vh
    display block
    position relative
    // font-style italic
    font-family $sans1
    color $red
    float none
    clear both
    font-size 2rem
    font-size 4vh
    font-size 3vh

  li, li a
    text-decoration none
    line-height 1.1
    font-size 5rem
    font-weight bold
    color $red
    list-style-type none
    cursor pointer
    position relative

    &::after
      width 0
      content ""
      mix-blend-mode darken
      background-color $pink
      height 30px
      position absolute
      left -3%
      top 30px
      pointer-events none
      transition width 150ms ease-out

    &:hover
      &::after
        width 106%

nav.secondary
  margin-bottom 2rem
  float none
  font-family $sans1

  ul
    li
      clear none
      float left
      margin-right 5vh

      a
        text-decoration none
        color $red
        font-size 1.4rem
        // font-style italic
        position relative

        &::after
          width 0
          content ""
          mix-blend-mode darken
          background-color $pink
          position absolute
          left -3%
          top 12px
          height 20px
          pointer-events none
          transition width 150ms ease-out

        &:hover
          &::after
            width 106%

        span
          float none
          font-size 1.3rem

footer.index
  font-family $sans1
  width $width
  float none
  margin 0
  display table
  color $red
  bottom 1rem
  padding 0

  p
    font-size .8rem
    line-height 1.2

    a
      line-height 1.2
      float initial
      color $red
      text-decoration none
      // font-variant small-caps
      position relative

      &::after
        width 95%
        content ""
        mix-blend-mode darken
        background-color #ffada8
        position absolute
        left 4px
        top 7px
        height 6px
        transition background-color 150ms ease-in-out

      &:hover
        &::after
          background-color #f79999
