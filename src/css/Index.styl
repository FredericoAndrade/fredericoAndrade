$width = 830px

h1.statement
  font-size 7rem
  font-size 24vh
  line-height 1
  max-width $width
  max-width 84vh
  margin 1vh 0
  float none
  display block
  position relative

  &::after
    height 400px
    width 400px
    background-color green
    mix-blend-mode color-burn
    border-radius 100%
    content ""
    position absolute
    right -20%
    pointer-events none

.details
  .floater
    position absolute
    left -240px
    top 50%
    font-size 1.5rem
    mix-blend-mode color-burn
    line-height 1.1
    width 256px
    height 256px
    z-index 2
    padding 1.5rem
    text-decoration none
    color black

    &:hover
      &::before
        transform rotateZ(120deg) scale(.8)
        border-radius 100%

      &::after
        transform rotateZ(120deg) scale(1.1)
        border-radius 0%

    &::before
      content ""
      position absolute
      left -.15rem
      top -.15rem
      width 100%
      height 100%
      border 2px solid
      transition all 200ms ease-out
      mix-blend-mode luminosity

    &::after
      top 50%
      left 25%
      content ""
      width 250px
      height 250px
      pointer-events none
      position absolute
      background-color green
      mix-blend-mode color-burn
      border-radius 100%
      transition all 200ms ease-in-out

    &:last-of-type
      right 15%
      text-align right
      top initial
      left initial
      bottom 250px

      &::after
        top 40%
        left -45%

#galleryIndex
  width $width
  float none
  margin 0 0 15vh
  display table

  .breadcrumb
    margin 11vh 0 7vh
    display block
    position relative
    font-family $sans1
    color $red

    float none
    clear both
    font-size 2rem
    font-size 4vh
    font-size 3vh

  li, li a
    text-decoration none
    line-height 1.1
    font-size 5rem
    font-weight bold
    color $red

    list-style-type none
    cursor pointer
    position relative

    &::after
      width 0
      content ""
      mix-blend-mode darken
      background-color $pink
      height 30px
      position absolute
      left -3%
      top 30px
      pointer-events none
      transition width 150ms ease-out

    &:hover
      &::after
        width 106%

nav.secondary
  margin-bottom 2rem
  float none
  font-family $sans1

  ul
    li
      clear none
      float left
      margin-right 5vh

      a
        text-decoration none
        color $red

        font-size 1.4rem
        position relative

        &::after
          width 0
          content ""
          mix-blend-mode darken
          background-color $pink
          position absolute
          left -3%
          top 12px
          height 20px
          pointer-events none
          transition width 150ms ease-out

        &:hover
          &::after
            width 106%

        span
          float none
          font-size 1.3rem

footer.index
  font-family $sans1
  width $width
  float none
  margin 0
  display table
  color $red
  bottom 1rem
  padding 0

  p
    font-size .8rem
    line-height 1.2

    a
      line-height 1.2
      float initial
      color $red
      text-decoration none
      position relative

      &::after
        width 95%
        content ""
        mix-blend-mode darken
        background-color #ffada8
        position absolute
        left 4px
        top 7px
        height 6px
        transition background-color 150ms ease-in-out

      &:hover
        &::after
          background-color #f79999
