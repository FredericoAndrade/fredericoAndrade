@font-face
    font-family 'governorregular'
    src url('fonts/governor-webfont.woff2') format('woff2'),
         url('fonts/governor-webfont.woff') format('woff')
    font-weight normal
    font-style normal

$sans = 'governorregular'
$yellow = #ffd000
$red = #C50F18
$red = #4799FC

h1,
h2
  font-family $sans
  color $yellow

h1,
h2,
h3,
ul,
p
  margin 0

h1
  font-size 3rem
h2
  font-size 1.5rem
h3
  font-size 1.9rem
  width 100%

p, ul, li
  clear both
  font-size 1rem

ul
  padding 0

h3
  a
    text-decoration none
    color black
    position relative

    &::after
      width 0
      content ""
      mix-blend-mode darken
      background lighten($yellow, 50%)
      height 12px
      position absolute
      left 0
      top 8px
      transition width 150ms ease-out

    &:hover
      &::after
        width 100%

body
  background #F2F5F6
  background #ffede6

  *
    line-height 1.75rem
    display inline-block
    float left
    box-sizing border-box

  i
    float initial

.App
  margin auto
  background white
  width 100%
  max-width 1140px
  padding 3.5rem 4.75rem 2.25rem 2.5rem
  border-right 5px solid $yellow

  h1
    line-height initial

  #content
    margin-top 6rem
    > div
      float left

    #main
      width ((100/6)*4)%
      padding-right 1rem

      section
        width 100%

        &:first-of-type
          article:first-of-type
            .date::after
              content ""
              position absolute
              height 3.25rem
              width 4px
              margin-left 14px
              margin-top -.25rem
              background $yellow

        h2
          width ((100/4)*1)%
          text-align right
          margin-left -1rem

        article
          width 100%
          margin-bottom 1.75rem

          .date
            width ((100/4)*1)%
            padding-right 1rem

            p
              text-align right
              width 100%

          .body
            float right
            width ((100/4)*3)%
            padding-left 1rem

            h3
              margin-top -.25rem
              margin-bottom .25rem

            .description
              a
                float initial
                color black
                text-decoration none
                font-variant small-caps
                position relative

                &::after
                  width 100%
                  content ""
                  mix-blend-mode darken
                  background lighten($yellow, 50%)
                  height 7px
                  position absolute
                  left 0
                  bottom 4px

                &:hover
                  &::after
                    width 100%

            &.more
              text-align center


    #side
      width ((100/6)*2)%
      padding-left 1rem

      section
        margin-bottom 1.5rem

        ul, p
          padding-top .25rem

          &:first-of-type
            padding 0

        a
          float initial
          color black
          text-decoration none

        &:last-of-type
          margin-top 11.75rem

footer
  width 100%
  padding-top 4rem

  .side
    float right